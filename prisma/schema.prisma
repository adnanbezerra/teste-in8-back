// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        Int         @id @default(autoincrement())
  username  String
  email     String
  password  String
  shoppings Shoppings[]
  Cart      Cart[]

  @@map("users")
}

enum PROVIDERS {
  european
  brazilian
}

model Product {
  id                  Int                   @id @default(autoincrement())
  provider            PROVIDERS
  idInTheAPI          Int
  ProductsOnCarts     ProductsOnCarts[]
  ProductsOnShoppings ProductsOnShoppings[]
}

model Cart {
  id              Int               @id @default(autoincrement())
  user            Users             @relation(fields: [userId], references: [id])
  userId          Int               @unique
  ProductsOnCarts ProductsOnCarts[]
}

model ProductsOnCarts {
  product   Product @relation(fields: [productId], references: [id])
  productId Int
  cart      Cart    @relation(fields: [cartId], references: [id])
  cartId    Int

  @@id([productId, cartId])
}

model ProductsOnShoppings {
  product    Product   @relation(fields: [productId], references: [id])
  productId  Int
  shopping   Shoppings @relation(fields: [shoppingId], references: [id])
  shoppingId Int

  @@id([productId, shoppingId])
}

model Shoppings {
  id                  Int                   @id @default(autoincrement())
  user                Users                 @relation(fields: [userId], references: [id])
  userId              Int
  boughtAt            DateTime              @default(now())
  ProductsOnShoppings ProductsOnShoppings[]
}
